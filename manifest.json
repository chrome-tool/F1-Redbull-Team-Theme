{
  "manifest_version": 3,
  "name": "F1 Redbull Team Theme",
  "version": "1.0.0",
  "description": "F1 Redbull Team WallPaper for Google Chrome.",
  "icons": {
    "16": "icons/icon16.ico",
    "48": "icons/icon48.ico",
    "128": "icons/icon128.ico"
},
  "author": "Seiri",
  "theme": {
    "images": {
      "theme_ntp_background": "images/background.jpg"
    },
    "colors": {
      "frame": [227, 23, 57],
      "frame_incognito": [227, 23, 57],
      "toolbar": [254, 228, 46],
      "button_background": [40, 40, 40]
    }
  },
  "properties": {
    "ntp_background_alignment": "center",
    "ntp_background_repeat": "no-repeat",
    "ntp_logo_alternate": 1
  },
  "tints": {
    "buttons": [0.5, 0.5, 0.5]
  }
}